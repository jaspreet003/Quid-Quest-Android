<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnboardingVerifyDetails"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/txtVFirstNameProfile"
            android:text="First Name"
            style="@style/textViewProfilePage"
            />

        <EditText
            android:id="@+id/editTxtFirstNameProfileONB"
            style="@style/editTextProfilePage"
            />

        <TextView
            android:id="@+id/txtVLastNameProfile"
            android:text="Last Name"
            style="@style/textViewProfilePage"/>

        <EditText
            android:id="@+id/editTxtLastNameProfileONB"
            style="@style/editTextProfilePage"
            />

        <TextView
            android:id="@+id/txtVPhoneNumberProfile"
            android:text="Phone Number"
            style="@style/textViewProfilePage"
            />

        <EditText
            android:id="@+id/editTxtPhoneNumberProfileONB"
            style="@style/editTextProfilePage"
            />

        <TextView
            android:id="@+id/txtVAccountNumberProfile"
            android:text="Account Number"
            style="@style/textViewProfilePage"
            />

        <EditText
            android:id="@+id/editTxtAccountNumberProfileONB"
            style="@style/editTextProfilePage"
            />

        <TextView
            android:id="@+id/txtVTransitNumberProfile"
            android:text="Transit Number"
            style="@style/textViewProfilePage"
            />

        <EditText
            android:id="@+id/editTxtTransitNumberProfileONB"
            style="@style/editTextProfilePage"
            />

        <TextView
            android:id="@+id/txtVInstituteNumberProfile"
            android:text="Institute Number"
            style="@style/textViewProfilePage"
            />

        <EditText
            android:id="@+id/editTxtInstituteNumberProfileONB"
            style="@style/editTextProfilePage"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <Button
            android:id="@+id/btnEditVerifyDetailsONB"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="EDIT"
            android:backgroundTint="@color/red"
            app:cornerRadius = "10dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            />

        <Button
            android:id="@+id/btnContinueVerifyDetailsONB"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="CONTINUE"
            android:backgroundTint="@color/green"
            app:cornerRadius = "10dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>


</LinearLayout>