<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnboardingBankDetails"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/login_background"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@color/gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@drawable/quid_logo"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bank Details"
                android:id="@+id/txtVBankDetails"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/gray2"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account Number"
                android:id="@+id/txtVAccountNumber"
                android:textSize="20sp"
                android:textAlignment="viewStart"
                android:textColor="@color/gray2"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:id="@+id/ediTxtEnterAccountNumber"
                android:layout_marginTop="10dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transit Number"
                android:id="@+id/txtVTransitNumber"
                android:textSize="20sp"
                android:textAlignment="viewStart"
                android:textColor="@color/gray2"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:id="@+id/ediTxtEnterTransitNumber"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Institute Number"
                android:id="@+id/txtVInstituteNumber"
                android:textSize="20sp"
                android:textAlignment="viewStart"
                android:textColor="@color/gray2"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:id="@+id/ediTxtEnterInstituteNumber"
                android:layout_marginTop="10dp"/>



            <Button
                android:id="@+id/btnNextOnbBankDetails"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:text="NEXT"
                android:backgroundTint="@color/green"
                app:cornerRadius = "10dp"/>



        </LinearLayout>



    </androidx.cardview.widget.CardView>




</LinearLayout>