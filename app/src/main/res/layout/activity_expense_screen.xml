<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Expense_Screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#019831"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/baseline_menu_24" />

            <TextView
                android:id="@+id/tvSettings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="User Welcome Text"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0"
                android:gravity="center_vertical|left"
                android:src="@drawable/baseline_person_2_24" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tvExpenses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Expenses"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                style="@style/Expenses_Text"/>

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginEnd="10dp"
                android:text="+  Add"
                android:layout_marginStart="170dp"
                android:gravity="right"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:backgroundTint="#979797" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:onClick="expand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:contentPadding="20dp"
            android:layout_margin="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/mLayout"
                android:animateLayoutChanges="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:src="@drawable/baseline_person_2_24" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginStart="5dp">

                            <TextView
                                android:id="@+id/tvName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Employee's name"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="17sp"/>

                            <TextView
                                android:id="@+id/tvAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="$123"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="17sp"
                                android:layout_gravity=""/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="top|fill"
                            android:layout_marginStart="5dp">

                            <TextView
                                android:id="@+id/tvDepartment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Department"
                                android:textSize="13sp"
                                android:layout_gravity="top"/>

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:text="Category"
                                android:textSize="13sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:id="@+id/btnLayout">

                    <Button
                        android:id="@+id/btnApprovw"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_weight="0"
                        android:text="Approve"
                        android:backgroundTint="#10C504"
                        android:textSize="13sp"    
                        android:textAllCaps="false"/>

                    <Button
                        android:id="@+id/btnDisapprove"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_weight="0"
                        android:text="Disapprove"
                        android:backgroundTint="#FF0000"
                        android:textSize="13sp"
                        android:textAllCaps="false"
                        android:layout_marginLeft="15dp"/>

                    <Button
                        android:id="@+id/btnView"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_weight="0"
                        android:text="View"
                        android:backgroundTint="#BD74D1"
                        android:textSize="13sp"
                        android:textAllCaps="false"
                        android:layout_marginLeft="35dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>